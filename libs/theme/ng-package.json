{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/theme",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "input": "src/tokens",
      "glob": "**/*.css",
      "output": "tokens"
    },
    {
      "input": "tailwind",
      "glob": "**/*.*",
      "output": "tailwind"
    }
  ],
  "allowedNonPeerDependencies": ["tslib"]
}